<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="2"/>
		<height value="1"/>
		<max-hp value="1500" regeneration="4" start-percentage="100"/>
		<max-ep value="0"/>
		<armor value="40"/>
		<armor-type value="organic"/>
		<sight value="13"/>
		<time value="250"/>
		<multi-selection value="true"/>
		<cellmap value="false"/>
		<levels>
			<level name="ancient" kills="10"/>
			<level name="expert" kills="20"/>
		</levels>
		<fields>
			<field value="air"/>
		</fields>
		<properties/>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="250"/>
			<resource name="stone" amount="50"/>
			<resource name="wood" amount="150"/>
			<resource name="housing" amount="3"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/eagle.bmp"/>
		<image-cancel path="../archer/images/tech_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/eagle_select1.wav"/>
			<sound path="sounds/eagle_select2.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/eagle_ack1.wav"/>
			<sound path="sounds/eagle_ack2.wav"/>
		</command-sounds>
	</parameters>

	<!-- *** skills *** -->

	<skills>

		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="75"/>
			<animation path="models/dragon_standing.g3d"/>
                        <attack-boost>
				<allow-multiple-boosts value="false" />
				<radius value="0"/>
                        	<target value="faction" include-self="true">
					<unit-type name="thunderbird" />
				</target>
				<max-hp value="0" regeneration="4"/>
				<max-ep value="0"/>
				<sight value="0"/>
				<attack-strenght value="0" value-percent-multiplier="true"/>
				<attack-range value="0"/>
				<armor value="0"/>
				<move-speed value="0"/>
				<production-speed value="0"/>
			<particles value="false">
			</particles>
                        </attack-boost>
			<sound enabled="false"/>
		</skill>

		<skill>

			<type value="move"/>

			<name value="move_skill"/>

			<ep-cost value="0"/>

			<speed value="375"/>

			<anim-speed value="75"/>

			<animation path="models/dragon_walking.g3d"/>

			<sound enabled="true" start-time="0">

			<sound-file path="sounds/eagle_fly.wav"/>

			</sound>

		</skill>

		<skill>

			<type value="move"/>

			<name value="charge_skill"/>

			<ep-cost value="0"/>

			<speed value="500"/>

			<anim-speed value="90"/>

			<animation path="models/dragon_walking.g3d"/>

			<sound enabled="true" start-time="0">

			<sound-file path="sounds/eagle_fly.wav"/>

			</sound>

		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_ground_skill"/>
			<ep-cost value="0"/>
			<speed value="45"/>
			<anim-speed value="70"/>
			<animation path="models/dragon_walking.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/ground_attack1.wav"/>
				<sound-file path="sounds/ground_attack2.wav"/>
				<sound-file path="sounds/ground_attack3.wav"/>
				<sound-file path="sounds/ground_attack4.wav"/>
			</sound>
			<attack-strenght value="240"/>
			<attack-var value="50"/>
			<attack-range value="7"/>
			<attack-type value="energy"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<attack-start-time value="0.3"/>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="$COMMONDATAPATH/sounds/eagle_hit4.wav"/>
				</sound>
			</projectile>
			<splash value="true">				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>
			<ep-cost value="0"/>
			<speed value="45"/>
			<anim-speed value="100"/>
			<animation path="models/dragon_attacking.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/eagle_attack1.wav"/>
			</sound>
			<attack-strenght value="360"/>
			<attack-var value="100"/>
			<attack-range value="1"/>
			<attack-type value="energy"/>
			<attack-fields>
				<field value="air"/>
			</attack-fields>
			<attack-start-time value="0.3"/>
			<projectile value="false"/>
			<splash value="false"/>
		</skill>


		<skill>

			<type value="die"/>

			<name value="die_skill"/>

			<ep-cost value="0"/>

			<speed value="120"/>

			<anim-speed value="120"/>

			<animation path="models/dragon_dying.g3d"/>

			<sound enabled="true" start-time="0">

				<sound-file path="sounds/eagle_die1.wav"/>

				<sound-file path="sounds/eagle_die2.wav"/>

			</sound>

			<fade value="true"/>

		</skill>

	</skills>

	<commands>

		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="../archer/images/tech_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../archer/images/tech_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

                <command>
			<type value="attack"/>
			<name value="throw"/>
			<image path="images/eagle_attack2.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_ground_skill"/>
		</command>
                <command>
			<type value="attack"/>
			<name value="breath"/>
			<image path="images/eagle_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="charge_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../archer/images/tech_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_ground_skill"/>
		</command>

	</commands>
</unit>
